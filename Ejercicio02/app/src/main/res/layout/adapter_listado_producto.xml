<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/material_deep_teal_200">

    <TextView
        android:id="@+id/producto_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/listado_producto_id" />

    <TextView
        android:id="@+id/producto_nombre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/listado_producto_nombre" />

    <TextView
        android:id="@+id/producto_precio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/listado_producto_precio" />

</LinearLayout>