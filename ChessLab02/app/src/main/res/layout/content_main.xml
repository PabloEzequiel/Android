<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.probarnocuestanada.crossfitchess.chesslab02.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="Dificultad de Ejercicios:" />


    <LinearLayout
        android:padding="10dp"
        android:background="#ff0000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/boton_mateEn1"
            android:background="#cc00cc"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="1dp"
            android:text="#1"
            android:onClick="nextMateEn1"
            />


        <Button
            android:id="@+id/boton_mateEn2"
            android:background="#cc00cc"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="1dp"
            android:text="#2"
            android:onClick="nextMateEn2"
            />


        <Button
            android:id="@+id/boton_mateEn3"
            android:background="#cc00cc"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="1dp"
            android:text="#3"
            android:onClick="nextMateEn3"
            />


        <Button
            android:id="@+id/boton_mateEn4"
            android:background="#cc00cc"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="1dp"
            android:text="#4"
            android:onClick="nextMateEn4"
            />

    </LinearLayout>
    
    
    <ImageView
        android:id="@+id/chess_board_image"
        android:src="@drawable/chess_mate2_00001"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_margin="10dp"
        android:background="#00ff00"/>





</LinearLayout>
