<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.probarnocuestanada.chess.chesslab03.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <SeekBar
        android:id="@+id/seekBar1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:max="11" />


    <TextView
        android:id="@+id/seekBar1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:text="" />
    
    <ImageView
        android:id="@+id/chess_board_image"
        android:src="@drawable/chess_mate2_00001"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_margin="10dp"
        android:background="#00ff00"/>



    <!-- -Botonera -->

        <LinearLayout
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/navigation_01_first"
                android:src="@drawable/ic_first_page_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:onClick="firstProblem" />
            <ImageView
                android:id="@+id/navigation_02_prev"
                android:src="@drawable/ic_chevron_left_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:onClick="prevProblem" />
            <ImageView
                android:id="@+id/navigation_03_next"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:onClick="nextProblem" />
            <ImageView
                android:id="@+id/navigation_04_last"
                android:src="@drawable/ic_last_page_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="2dp"
                android:onClick="lastProblem" />
            <ImageView
                android:id="@+id/navigation_05_info"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="2dp"
                android:layout_margin="2dp"
                android:layout_marginRight="2dp"/>
        </LinearLayout>


    <TextView
        android:id="@+id/chess_solution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="left"
        android:text="" />



</LinearLayout>
